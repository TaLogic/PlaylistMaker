<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/settings"
        app:titleTextColor="@color/deep_charcoal"
        app:titleTextAppearance="@style/ToolbarSettings"
        app:navigationIcon="@drawable/ic_back"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:paddingVertical="@dimen/padding_vertical_settings"
        android:text="@string/dark_theme"
        android:textSize="@dimen/text_size_settings"
        android:textColor="@color/deep_charcoal"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_share"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:paddingVertical="@dimen/padding_vertical_settings"
        android:text="@string/share_the_app"
        android:textSize="@dimen/text_size_settings"
        android:textColor="@color/deep_charcoal"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_support"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:paddingVertical="@dimen/padding_vertical_settings"
        android:text="@string/write_to_support"
        android:textSize="@dimen/text_size_settings"
        android:textColor="@color/deep_charcoal"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingEnd="20dp"
        android:paddingVertical="@dimen/padding_vertical_settings"
        android:text="@string/user_agreement"
        android:textSize="@dimen/text_size_settings"
        android:textColor="@color/deep_charcoal"/>
</LinearLayout>